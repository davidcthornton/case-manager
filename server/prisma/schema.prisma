datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Device {
  id           Int       @id @default(autoincrement())
  name         String
  type         DeviceType
  collectedAt  DateTime
  case         Case      @relation(fields: [caseId], references: [id])
  caseId       Int

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Case {
  id         Int      @id @default(autoincrement())
  caseNumber String   @unique
  eventDate  DateTime
  eventTime  String   // storing time as a string (e.g. '14:30')
  crimeType  CrimeType
  devices      Device[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum CrimeType {
  theft
  assault
  fraud
  arson
}

enum DeviceType {
	desktop
	laptop
	smartphone
	tablet
	externaldrive
	removablemedia
	router
	other
}


